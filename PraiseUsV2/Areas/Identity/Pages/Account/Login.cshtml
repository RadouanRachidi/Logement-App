@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="body-login">


    <section>

        <div class="background">
            <div class="shape"></div>
            <div class="shape"></div>
        </div>

        <form class="form-global" id="account" method="post">
            @*<h2>Use a local account to log in.</h2>
            <hr />*@

            <h1>Se Connecter</h1>

            <div class="">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class=""></span>
                </div>
                <div class="">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password"></span> 
                </div>
                <div>
                    <div class="checkbox">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-label">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>

                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Mot de Passe oublié</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">S'inscrire</a>
                    </p>
                    @*<p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Envoyé un nouveau email de confirmation</a>
                    </p>*@
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary btn-login">Se Connecter</button>
                </div>
            </div>


        </form>
    </section>



